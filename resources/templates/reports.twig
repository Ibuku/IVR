            <!-- Page header -->
            <div class="page-header page-header-default">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Reports</span></h4>
                    </div>

                    <div class="heading-elements">
                        <select name="client" class="form-control" ng-model="username" ng-change="changeActive()">
                            <option value="all">ALL</option>
                            {% for user in users %}
                                <option value="{{ user.username }}">{{ user.username }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="breadcrumb-line">
                    <ul class="breadcrumb">
                        <li><a href="{{ path_for('index') }}"><i class="icon-home2 position-left"></i> Home</a></li>
                        <li class="active">Reports</li>
                    </ul>

                    <ul class="breadcrumb-elements">
                        {% if user.is_admin %}
                            <li><a href="{{ path_for('settings') }}"><i class="icon-gear position-left"></i> Settings</a></li>
                        {% endif %}
                        <li><a href="{{ path_for('download') }}"><i class="icon-download position-left"></i>Download</a></li>
                    </ul>
                </div>
            </div>
            <!-- /page header -->


            <!-- Content area -->
            <div class="content">

                <!-- Call record -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">

                        <div ng-hide="camp_data.data.length > 0" class="text-center">
                            <h5 class="text-center text-black">All Call Records</h5>
                            <i class="fa fa-spinner fa-pulse fa-3x fa-fw fa-spin"></i><br><br>
                            <span class="title">Loading...</span>
                        </div>

                        <div ng-hide="camp_data.data.length > 0" class="row">
                            <div class="col-lg-12">
                                <div class="chart-container">
                                    <div class="row">
                                        <form class="form-inline" style="zoom: 0.8; float: right">
                                            <div class="form-group">
                                                <label for="start_date">Start Date</label>
                                                <input type="text" class="form-control" name="start_date" id="start_date">
                                            </div>
                                            <div class="form-group">
                                                <label for="end_date">End Date</label>
                                                <input type="text" class="form-control" name="end_date" id="end_date">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Filter</button>
                                        </form>
                                    </div>
                                    <div class="chart has-fixed-height" id="connect_pie">
                                        <div id="camp" style="width: 100%; height: 100%; margin: 0 auto"></div>
                                    </div>
                                </div>
                            </div>
                            {# <div class="col-lg-6">
                                <div class="chart-container">
                                    <div class="chart has-fixed-height" id="connect_column"></div>
                                </div>
                            </div> #}
                        </div>
                    </div>
                </div>

                <!-- impression -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div ng-hide="camp_data.impression_data.length > 0" class="text-center">
                            <h5 class="text-center text-black">Advert Impressions</h5>
                            <i class="fa fa-spinner fa-pulse fa-3x fa-fw fa-spin"></i><br><br>
                            <span class="title">Loading...</span>
                        </div>
                        <div  ng-hide="camp_data.impression_data.length > 0" class="chart-container">
                            <div class="row">
                                <form class="form-inline" style="zoom: 0.8; float: right" ng-submit="filterReport('camp_data.impression_data',impression_start, impression_end)">
                                    <div class="form-group">
                                        <label for="impression_start">Start Date</label>
                                        <input type="text" class="form-control" name="start_date" id="impression_start" ng-model="impression_start" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="impression_end">End Date</label>
                                        <input type="text" class="form-control" name="end_date" id="impression_end" ng-model="impression_end" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Filter</button>
                                </form>
                            </div>
                            <div class="chart has-fixed-height" id="line_bar">
                                <div id="impression" style="width: 100%; height: 100%; margin: 0 auto"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- subscribed -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div ng-hide="camp_data.subscribed_data.length > 0" class="text-center">
                            <h5 class="text-center text-black">Subscription Attempts</h5>
                            <i class="fa fa-spinner fa-pulse fa-3x fa-fw fa-spin"></i><br><br>
                            <span class="title">Loading...</span>
                        </div>

                        <div ng-show="camp_data.subscribed_data.length > 0" class="row">
                            <div class="col-lg-12">
                                <div class="chart-container">
                                    <div class="chart has-fixed-height" id="connect_pie">
                                        <div id="subscribed" style="width: 100%; height: 100%; margin: 0 auto"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- confirmed -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div ng-hide="camp_data.confirmation_data.length > 0" class="text-center">
                            <h5 class="text-center text-black">Subscription Confirmation</h5>
                            <i class="fa fa-spinner fa-pulse fa-3x fa-fw fa-spin"></i><br><br>
                            <span class="title">Loading...</span>
                        </div>
                        <div ng-show="camp_data.confirmation_data.length > 0" class="row">
                            <div class="col-lg-12">
                                <div class="chart-container">
                                    <div class="chart has-fixed-height" id="connect_pie">
                                        <div id="confirmed" style="width: 100%; height: 100%; margin: 0 auto"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- insufficient balance -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div ng-hide="camp_data.insufficient_data.length > 0" class="text-center">
                            <h5 class="text-center text-black">Insufficient Balance Records</h5>
                            <i class="fa fa-spinner fa-pulse fa-3x fa-fw fa-spin"></i><br><br>
                            <span class="title">Loading...</span>
                        </div>
                        <div ng-show="camp_data.insufficient_data.length > 0" class="row">
                            <div class="col-lg-12">
                                <div class="chart-container">
                                    <div class="chart has-fixed-height" id="connect_pie">
                                        <div id="insufficient" style="width: 100%; height: 100%; margin: 0 auto"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- already subscribed -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div ng-hide="camp_data.subbed_data.length > 0" class="text-center">
                            <h5 class="text-center text-black">Already Subscribed Records</h5>
                            <i class="fa fa-spinner fa-pulse fa-3x fa-fw fa-spin"></i><br><br>
                            <span class="title">Loading...</span>
                        </div>
                        <div ng-show="camp_data.subbed_data.length > 0" class="row">
                            <div class="col-lg-12">
                                <div class="chart-container">
                                    <div class="chart has-fixed-height" id="connect_pie">
                                        <div id="subbed" style="width: 100%; height: 100%; margin: 0 auto"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- success -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div ng-hide="camp_data.success_data.length > 0" class="text-center">
                            <h5 class="text-center text-black">Successful Subscription Records</h5>
                            <i class="fa fa-spinner fa-pulse fa-3x fa-fw fa-spin"></i><br><br>
                            <span class="title">Loading...</span>
                        </div>
                        <div ng-show="camp_data.success_data.length > 0" class="row">
                            <div class="col-lg-12">
                                <div class="chart-container">
                                    <div class="chart has-fixed-height" id="connect_pie">
                                        <div id="success" style="width: 100%; height: 100%; margin: 0 auto"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- failed -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div ng-hide="camp_data.failed_data.length > 0" class="text-center">
                            <h5 class="text-center text-black">Failed Subscription Records</h5>
                            <i class="fa fa-spinner fa-pulse fa-3x fa-fw fa-spin"></i><br><br>
                            <span class="title">Loading...</span>
                        </div>
                        <div ng-show="camp_data.failed_data.length > 0" class="row">
                            <div class="col-lg-12">
                                <div class="chart-container">
                                    <div class="chart has-fixed-height" id="connect_pie">
                                        <div id="failed" style="width: 100%; height: 100%; margin: 0 auto"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- /line and bar combination -->
                    </div>
                </div>
            </div>
        </div>
    </div>
